#$Id: Make2.sun-CC,v 11.22 1996/02/18 11:41:32 al Exp $ -*- Makefile -*-

VPATH = .:..

# Use g++ if you have it for a speed advantage of about 20%
CCC = CC
CCFLAGS = -DNDEBUG -DUNIX -O4
LIBS = -lm
LDFLAGS =

.SUFFIXES : .o .cc
.cc.o:; $(CCC) $(CCFLAGS) -c $<

# Warnings not used because Sun's headers make plenty of them.
#------------------------------------------------------------------------
$(TARGET): $(OBJS)
	-rm $@ >/dev/null 2>&1
	$(CCC) $(CCFLAGS) $(OBJS) -o $@ $(LIBS) $(LDFLAGS)
#------------------------------------------------------------
#------------------------------------------------------------
